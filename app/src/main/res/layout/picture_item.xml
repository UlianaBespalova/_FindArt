<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="270dp">

    <ImageView
        android:id="@+id/item_picture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="35dp"
        android:scaleType="centerCrop"
        android:contentDescription="@string/best_results"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/mock"
         />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/item_image_shape"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:layout_marginBottom="35dp"
        android:background="@color/transparent_dark"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/item_picture_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="5dp"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:fontFamily="@font/baskerville"
        android:textColor="@color/color_dialog"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/item_picture_painter"
        app:layout_constraintStart_toStartOf="@id/item_picture"
        app:layout_constraintTop_toTopOf="@id/item_image_shape"
        app:layout_constraintVertical_chainStyle="spread"
        tools:text="Still Life with a Bottle of Rum" />

    <TextView
        android:id="@+id/item_picture_painter"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginHorizontal="11dp"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:fontFamily="@font/baskerville"
        android:textColor="@color/color_dialog"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@id/item_picture"
        app:layout_constraintEnd_toEndOf="@id/item_picture"
        app:layout_constraintStart_toStartOf="@id/item_picture"
        app:layout_constraintTop_toBottomOf="@id/item_picture_title"
        tools:text="Pablo Picasso" />

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:layout_marginHorizontal="15dp"
        app:layout_constraintTop_toBottomOf="@id/item_picture"
        layout="@layout/horizontal_divider" />
</androidx.constraintlayout.widget.ConstraintLayout>