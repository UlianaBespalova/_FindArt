<resources
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.FindArt" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary_variant</item>
        <item name="colorOnPrimary">@color/color_on_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorSecondaryVariant">@color/color_secondary</item>
        <item name="colorOnSecondary">@color/color_on_secondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Custom theme. -->
        <item name="android:actionMenuTextColor">@color/color_on_primary</item>
        <item name="android:toolbarStyle">@color/color_on_primary</item>
        <item name="android:actionMenuTextAppearance">@style/Toolbar.MenuText</item>

        <item name="android:windowBackground">@drawable/background</item>
        <item name="android:textColor">@color/color_on_primary</item>
    </style>

    <style name="ActionBar_transparent" parent="Theme.FindArt">
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="o_mr1">shortEdges</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>

        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/color_dialog_background</item>
    </style>

    <style name="Theme.FindArt_dark.AppBarOverlay" parent="ThemeOverlay.AppCompat.DayNight.ActionBar">
        <item name="colorControlNormal">?attr/colorPrimary</item>
    </style>

    <style name="Toolbar.MenuText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@color/divider_color</item>
    </style>

    <style name="Theme.FindArt_animation" parent="Theme.FindArt">
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowSharedElementEnterTransition">@transition/open_image</item>
        <item name="android:windowSharedElementExitTransition">@transition/open_image</item>
    </style>

    <style name="Theme.FindArt_animation_full" parent="Theme.FindArt_animation">
        <item name="android:statusBarColor">@color/picture_background</item>
    </style>

    <style name="Theme.FindArt_splash" parent="ActionBar_transparent">
        <item name="android:background">@drawable/splash_screen</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
    </style>

    <style name="Theme.FindArt.AppBarOverlay" parent="ThemeOverlay.AppCompat.DayNight.ActionBar">
        <item name="android:background">?attr/colorPrimary</item>
    </style>
    <style name="Theme.FindArt.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">?attr/colorPrimaryVariant</item>
    </style>

    <style name="ToolbarColoredBackArrow" parent="Theme.FindArt">
        <item name="android:textColorSecondary">@color/icon_tint_color</item>
    </style>

</resources>